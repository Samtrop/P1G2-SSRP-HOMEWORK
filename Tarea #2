<script>
function myPrimerAlgoritmo() {
   var nombre = "Samuel"
   var edad = 21

   if (edad < 60) {

       alert("Usted " + nombre + "es MENOR de 60 años de edad ")

       }else{          

       alert("Usted " + nombre + "es MAYOR de 60 años de edad ")
      }
    }

  </script>

